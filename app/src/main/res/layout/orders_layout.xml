<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:background="#183661"
        android:backgroundTint="#8BC34A"
        android:padding="15sp">


        <TextView
            android:id="@+id/orderUserName"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginBottom="10sp"
            android:text="User Name"
            android:textColor="#000000"
            android:textSize="15sp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderPhoneNumber"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="10sp"
            android:text="Phone Number"
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cartProductQuantity"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="25sp"
            android:gravity="center"
            android:text="Total Price"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderAddressCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderTotalPrice"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Address, City"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderAddressCity"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="Date, Time"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/showAllProductsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orderDateTime"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="20sp"
            android:background="@drawable/corners"
            android:backgroundTint="#00BCD4"
            android:text="Show Order Products"
            android:textAllCaps="false"
            android:textSize="15sp" />


    </RelativeLayout>

</RelativeLayout>