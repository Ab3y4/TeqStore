<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4FAB2"
    tools:context=".ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginBottom="15sp"
        android:text="Confirm your shipment details"
        android:textAlignment="center"
        android:textColor="#022c43"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/shipmentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="80sp"
        android:layout_marginRight="25sp"
        android:hint="Full Name" />

    <EditText
        android:id="@+id/shipmentPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipmentName"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="25sp"
        android:hint="Contact Number" />

    <EditText
        android:id="@+id/shipmentAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipmentPhoneNumber"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="25sp"
        android:hint="Home Address" />

    <EditText
        android:id="@+id/shipmentCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipmentAddress"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="25sp"
        android:hint="City" />

    <EditText
        android:id="@+id/shipmentPostalCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shipmentCity"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="25sp"
        android:hint="Postal Code" />

    <Button
        android:id="@+id/confirmFinalOrderBtn"
        android:layout_width="400dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/buttons"
        android:backgroundTint="#C4F1A1"
        android:text="Confirm Order"
        android:textColor="#fff"
        android:textSize="18sp" />

</RelativeLayout>