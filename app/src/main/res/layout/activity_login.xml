<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/login_img">

    <TextView
        android:id="@+id/userLogin"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="297dp"
        android:layout_marginTop="606dp"
        android:text="User"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/adminPanel"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="607dp"
        android:text="Admin"
        android:textColor="#fff"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="260sp"
        android:layout_height="80sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70sp"
        android:contentDescription="Login Image"
        android:src="@drawable/app_logo" />


    <EditText
        android:id="@+id/login_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:layout_marginBottom="250sp"
        android:background="@drawable/underline_white"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        android:hint="USERNAME"
        android:padding="12sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="15sp"

        />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:layout_marginBottom="200sp"
        android:background="@drawable/underline_white"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:padding="12sp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="15sp" />

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50sp"
        android:layout_marginLeft="50sp"
        android:layout_marginEnd="49sp"
        android:layout_marginRight="50sp"
        android:layout_marginBottom="139sp"
        android:background="@drawable/buttons"
        android:backgroundTint="#5B9A5E"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:id="@+id/linearLayout_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="608sp"
        android:layout_marginEnd="0sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="19sp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/remember_me_chkb"
            style="@style/Material.Drawable.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60sp"
            android:gravity="center_vertical"
            android:text="Remember Me"
            android:textColor="#cdffeb"
            android:textSize="14sp"

            />

        <TextView
            android:id="@+id/forgetPassword"
            android:layout_width="128sp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/linearLayout_2"
            android:layout_marginLeft="40sp"
            android:gravity="center"
            android:text="Forget Password"
            android:textAlignment="center"
            android:textColor="#cdffeb"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>